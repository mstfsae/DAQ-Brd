choice SPI_HOST
    prompt "SPI peripheral that controls this bus"
    default SPI2_HOST
    help
        Select SPI peripheral that controls this bus.
    config SPI2_HOST
        bool "SPI2_HOST"
        help
            Use SPI2_HOST. This is also called HSPI_HOST.w
    config SPI3_HOST
        bool "SPI3_HOST"
        help
            USE SPI3_HOST. This is also called VSPI_HOST
endchoice


menu "ADS866x ADC Channel Configuration"

    config ADC_NUM_CHANNELS
        int "Number of ADC channels to configure"
        range 1 8
        default 8
        help
            Set the number of ADC channels (4 for ADS8664, 8 for ADS8668)
    
    menu "Channel Input Ranges"
        depends on ADC_NUM_CHANNELS > 0
    
    # Channel 0 Configuration
    choice
        prompt "Channel 0 Input Range"
        default CH0_RANGE_2P5VREF
        help
            Select input range for Channel 0
    
        config CH0_RANGE_2P5VREF
            hex "±2.5 × VREF (0000)"
            default 0x0
        config CH0_RANGE_1P25VREF
            hex "±1.25 × VREF (0001)"
            default 0x1
        config CH0_RANGE_0P625VREF
            hex "±0.625 × VREF (0010)"
            default 0x2
        config CH0_RANGE_0P3125VREF
            hex "±0.3125 × VREF (0011)"
            default 0x3
        config CH0_RANGE_0P15625VREF
            hex "±0.15625 × VREF (1011)"
            default 0xB
        config CH0_RANGE_0TO2P5VREF
            hex "0 to 2.5 × VREF (0101)"
            default 0x5
        config CH0_RANGE_0TO1P25VREF
            hex "0 to 1.25 × VREF (0110)"
            default 0x6
        config CH0_RANGE_0TO0P625VREF
            hex "0 to 0.625 × VREF (0111)"
            default 0x7
        config CH0_RANGE_0TO0P3125VREF
            hex "0 to 0.3125 × VREF (1111)"
            default 0xF
    endchoice
    
    # Channel 1 Configuration
